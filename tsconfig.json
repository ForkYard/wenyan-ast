{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "es5",
    "module": "es2015",
    "lib": [
      "esnext",
      "esnext.asynciterable",
      "dom",
      "dom.iterable"
    ],
    "importHelpers": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "declaration": true,
    "declarationDir": "./typings",
    "strict": true,
    "types": [
      "@types/node",
      "@types/jest"
    ],
    "paths": {
      "@wenyanlang/core": [
        "./packages/core/src"
      ],
      "@wenyanlang/examples": [
        "./packages/examples"
      ],
      "@wenyanlang/stdlib": [
        "./packages/stdlib"
      ],
      "@wenyanlang/utils": [
        "./packages/utils"
      ],
      "@wenyanlang/cli": [
        "./packages/cli"
      ],
    }
  },
  "include": [
    "./packages"
  ],
  "exclude": [
    "node_modules",
    "**/**/*.test.ts",
    "**/**/*.md",
    "test",
    "typings",
    "dist",
    "scripts",
    "packages/viewer"
  ]
}